<?xml version="1.0" encoding="UTF-8"?>
<form>
    
    <field 
        name="maxlength"
        type="number"
        label="Maximum Length"
        min="1" />
  
  	<field 
        name="charcounter"
        label="Character Counter"
        type="radio"
        default="false"
        layout="joomla.form.field.radio.switcher">
            <option value="false">JNO</option>
            <option value="true">JYES</option>
    </field>
  
  	<field 
        name="inputmode"
        type="text"
        label="Input Mode" />
  
  	<field 
        name="addon_before"
        type="text"
        label="Addon Before" />
  
  	<field 
        name="addon_after"
        type="text"
        label="Addon After" />
  
</form>