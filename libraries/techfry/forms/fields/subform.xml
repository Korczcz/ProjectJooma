<?xml version="1.0" encoding="UTF-8"?>
<form>
    
    <field
		name="options"
		type="subform"
		label="PLG_FIELDS_SUBFORM_PARAMS_OPTIONS_LABEL"
		layout="joomla.form.field.subform.repeatable"
		multiple="true">
			<form hidden="true" name="options_modal" repeat="true">
				<field context="" name="customfield" type="subfields" label="PLG_FIELDS_SUBFORM_PARAMS_CUSTOMFIELD_LABEL" default="" />

				<field name="render_values" type="radio" label="PLG_FIELDS_SUBFORM_PARAMS_RENDER_VALUES_LABEL" layout="joomla.form.field.radio.switcher" default="1">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				</field>
			</form>
	</field>
  
  	<field 
        name="multiple"
        label="Multiple"
        type="radio"
        default="false"
        layout="joomla.form.field.radio.switcher">
            <option value="false">JNO</option>
            <option value="true">JYES</option>
    </field>
  
  	<field
		name="form_layout"
		type="list"
		label="Form Layout"
        default="joomla.form.field.subform.repeatable">
			<option value="joomla.form.field.subform.default">JDEFAULT</option>
			<option value="joomla.form.field.subform.repeatable">Repeatable</option>
			<option value="joomla.form.field.subform.repeatable-table">Repeatable Table</option>
	</field>
        
    <field name="max_rows" type="number" label="Maximum Rows" min="1" />
	
</form>