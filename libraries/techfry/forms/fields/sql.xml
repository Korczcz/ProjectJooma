        name="sql_where"
        type="text"
        label="Where" />
  
  	<field 
        name="sql_group"
        type="text"
        label="Group By" />
  
  	<field 
        name="sql_order"
        type="text"
        label="Order By" />
  
  	<field 
        name="key_field"
        type="text"
        label="Key Field" />
  
  	<field 
        name="value_field"
        type="text"
        label="Value Field" />
  
  	<field 
        name="header"
        type="text"
        label="Header" />
    
    <field 
        name="multiple"
        label="Multiple"
        type="radio"
        default="false"
        layout="joomla.form.field.radio.switcher">
