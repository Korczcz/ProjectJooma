<?xml version="1.0" encoding="utf-8"?>
<form>

    <field
	    name="column_class"
	    type="text"
	    label="Column Class"
	    descriptin="Add background and spacing classes" />
	    
	<field
        name="padding"
        type="list"
        label="Padding">
            <option value="">JNONE</option>
            <option value="p-1">Small</option>
            <option value="p-3">Medium</option>
            <option value="p-5">Large</option>
    </field>
	    
    <field
        name="border"
        type="list"
        label="Border">
            <option value="">JNONE</option>
            <option value="border">Default</option>
            <option value="border border-primary">Primary</option>
            <option value="border border-secondary">Secondary</option>
    </field>
    
    <field
        name="border_radius"
        type="list"
        label="Border Radius">
            <option value="">JNONE</option>
            <option value="rounded">Rounded</option>
            <option value="rounded-pill">Pill</option>
            <option value="rounded-circle">Circle</option>
    </field>
    
    <field
        name="align"
        type="list"
        label="Alignment">
            <option value="">JNONE</option>
            <option value="text-start">Start</option>
            <option value="text-center">Center</option>
            <option value="text-end">End</option>
    </field>
	    
    <field
        name="shadow"
        type="list"
        label="Shadow">
            <option value="">JNONE</option>
            <option value="small">Small</option>
            <option value="medium">Medium</option>
            <option value="large">Large</option>
    </field>
    
    <field
        name="hover"
        type="list"
        label="Hover Effect">
            <option value="">JNONE</option>
            <option value="hover-shadow">Shadow</option>
            <option value="translate-top">Translate Top</option>
    </field>
    
    <field
        name="transition"
        type="list"
        label="Hover Duration">
            <option value="">JNONE</option>
            <option value="transition-1">150 ms</option>
            <option value="transition-2">300 ms</option>
            <option value="transition-3">500 ms</option>
            <option value="transition-4">750 ms</option>
            <option value="transition-5">1000 ms</option>
    </field>
	
</form>