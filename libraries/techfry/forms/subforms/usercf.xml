<?xml version="1.0" encoding="utf-8"?>
<form>
    <field 
     	name="cf" 
        type="sql" 
        label="Custom Field"
        query="SELECT id, title FROM #__fields WHERE state=1 AND context='com_users.user'" 
        key_field="id" 
        value_field="title"
        header="JSELECT"
        layout="joomla.form.field.list-fancy-select" />
  
  	<field
       	name="cf_type"
        type="list"
        label="Type"
        default="1">
      		<option value="1">Set Value</option>
      		<option value="2">Increment Value</option>
  	</field>
		
	<field
		name="val"
		type="text"
		label="Value" />
</form>