<?xml version="1.0" encoding="utf-8"?>
<form>
    <field 
        name="mail_id"
        label="COM_TFMAIL_MAIL_ID"
        type="sql"
        query="SELECT id, title FROM #__tfm_mail WHERE published=1 AND mail_type='campaign'"
        key_field="id"
        value_field="title"
        layout="joomla.form.field.list-fancy-select">
            <option value="">JSELECT</option>
    </field>
        
    <field 
        name="delay"
        label="COM_TFMAIL_DELAY"
        type="number"
        min="0" />
</form>